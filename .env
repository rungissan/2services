# Local Development Environment Variables
# These are used when running services with NX (not in Docker)

# MongoDB (Docker container accessible via localhost)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=password
MONGO_DATABASE=two-services
MONGO_AUTH_SOURCE=admin
MONGO_CONNECTION_STRING=mongodb://admin:password@localhost:27017/two-services?authSource=admin

# Redis (Main Cache) - Docker container accessible via localhost
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_CONNECTION_STRING=redis://localhost:6379/0

# Redis Time Series - Docker container accessible via localhost
REDIS_TIMESERIES_HOST=localhost
REDIS_TIMESERIES_PORT=6380
REDIS_TIMESERIES_DB=0
REDIS_TIMESERIES_CONNECTION_STRING=redis://localhost:6380/0

# Redis Pub/Sub - Docker container accessible via localhost
REDIS_PUBSUB_HOST=localhost
REDIS_PUBSUB_PORT=6381
REDIS_PUBSUB_DB=0
REDIS_PUBSUB_CONNECTION_STRING=redis://localhost:6381/0
